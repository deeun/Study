    <title>lab04_number.html</title>
</head>
<body>
    <script>
    //숫자: 명시적 형변환
    let strNum = '10';
    console.log(Number(strNum));
    console.log(typeof(Number(strNum)));

    let strNum2 = 'ten';
    console.log(Number(strNum2)); // NaN

    //valueOf()
    let objNum = new Number(10);
    console.log(objNum); 
    console.log(objNum.valueOf());
    console.log(typeof(objNum.valueOf()));

    //parse
    //parseInt(): 정수형으로 표현 (소수점 밑 삭제.)
    console.log(typeof(parseInt(1.23)));
    console.log(parseInt(1.63));

    //parseFloat(): 실수
    console.log(parseFloat(1));
    console.log(parseFloat(1.97866));
    console.log(typeof(parseFloat(1.97866)));
    
    //tofixed()
    let float1 = 123.4567899;
    console.log(float1.toFixed(2))

    </script>
</body>
</html>
