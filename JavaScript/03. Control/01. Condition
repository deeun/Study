    <script>
        //조건문
          //if
          let age = 20
          if(age > 17) {
              console.log('투표 가능');
          }
          if(age <= 17) {
              console.log ('투표 불가능');
          }
  
          // else (if)
          if(age > 17) {
              console.log('투표 가능');
          }else {
              console.log ('투표 불가능');
          }
  
          //else if
          if(age > 17) {
              console.log('투표 가능');
          } 
          else if(age <=17 && age >0) {
              console.log ('투표 불가능');
          }
  
          //switch문
          let stuff = 'bronze'
          switch(stuff) {
              case 'gold':
                  console.log('금입니다.');
                  break;
              case 'silver':
                  console.log('은입니다.');
                  break;
              default:
                  console.log('격려합니다.');
          }
          </script>
