<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>lab01_syntax.html</title>
</head>
<body>
    <script>
        //함수 사용하는 이유: 재사용성이 좋다.
        //함수 선언
        function add(x, y){
            console.log(x + y);
        }
        //함수 호출 : 사용
        add(1, 2);

        //매개변수가 없는 함수
        function print(){
            console.log('함수 인쇄');
        }
        print();

        //출력값
        function add2(x, y){
            return x + y;
        }
        add2(3, 4);
        console.log(add2(3, 4));

        //함수 정의하는 방법
        //함수의 선언식 : function 키워드 사용
        function method1(){
            console.log('함수의 선언식');
        }
        
        //함수의 표현식 : function + 변수에 저장
        let method2 = function() {
            console.log('함수의 표현식');
        }
        method2();


    </script>
</body>
</html>
